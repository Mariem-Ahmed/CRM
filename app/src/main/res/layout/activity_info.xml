<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dip"
        android:id="@+id/leadLinear"
        android:background="#FFF"
        >
        <LinearLayout
            android:id="@+id/Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/liner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3"        >

                <TextView
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Activity Subject"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    />
                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primary"
                    android:inputType="text"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:editable="false"
                    android:textAlignment="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3"        >

                <TextView
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Related Lead"
                    android:textColor="@color/primary"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primary"
                    android:inputType="textEmailAddress"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3"        >

                <TextView
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ActivityType"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/telephone"
                    />
                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primary"
                    android:inputType="phone"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/liner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3"        >


                <TextView
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Activity Status"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    />
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primary"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:id="@+id/liner6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"        >

                    <TextView
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/StartDate"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"

                        />
                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"        >
                    <TextView
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/StartTime"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"

                        />
                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"        >
                    <TextView
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/DurationTime"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"

                        />
                    <EditText
                        android:id="@+id/editText9"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"        >
                    <TextView
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/LeadStatus"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"

                        />
                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"        >
                    <TextView
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        />
                    <EditText
                        android:id="@+id/editText22"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>