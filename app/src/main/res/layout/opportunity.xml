<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject Name *"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:textColorHint="@color/primary"
        />
    </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/liner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textview6"
                android:text="Expected Close Date"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:layout_weight=".45"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/textcloseddate"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight=".55"
                android:background="@drawable/border_for_textview"
                android:drawableRight="@drawable/calender"
                android:editable="false"
                android:focusable="false"
                android:textAlignment="center"

                />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Oppotunity Amount"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/primary"
            android:drawableRight="@drawable/calculator"
            android:inputType="number"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Probability"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/primary"
            android:drawableRight="@drawable/calculator"
            android:inputType="number"
            />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/liner17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview15"
                android:text="@string/RelatedLead"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:layout_weight=".5"

                />
            <Spinner
                android:id="@+id/relatedLeadSpinner"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textColor="@color/primary"
                android:layout_weight=".5"
                android:background="@drawable/spinner_background"
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview5"
                android:text="@string/AssignedTo"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:layout_weight=".53"

                />
            <Spinner
                android:id="@+id/assignedToSpinner"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textColor="@color/primary"
                android:layout_weight=".47"
                android:background="@drawable/spinner_background"
                android:textAlignment="center"
                />
        </LinearLayout>


</LinearLayout>
    </ScrollView>